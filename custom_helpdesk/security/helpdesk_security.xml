<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Helpdesk Categories -->
        <record id="module_category_helpdesk" model="ir.module.category">
            <field name="name">Helpdesk</field>
            <field name="description">Manage helpdesk access rights</field>
            <field name="sequence">10</field>
        </record>

        <!-- Helpdesk User Group -->
        <record id="group_helpdesk_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_helpdesk"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">The user can view and edit tickets assigned to them.</field>
        </record>

        <!-- Helpdesk Manager Group -->
        <record id="group_helpdesk_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_helpdesk"/>
            <field name="implied_ids" eval="[(4, ref('group_helpdesk_user'))]"/>
            <field name="comment">The user can manage all helpdesk tickets and teams.</field>
        </record>

        <!-- Record Rules -->
        <record id="helpdesk_ticket_rule_user" model="ir.rule">
            <field name="name">Helpdesk Ticket: User Access</field>
            <field name="model_id" ref="model_helpdesk_ticket"/>
            <field name="domain_force">[
                '|',
                ('user_id', '=', user.id),
                ('team_id.member_ids', 'in', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_helpdesk_user'))]"/>
        </record>

        <record id="helpdesk_ticket_rule_manager" model="ir.rule">
            <field name="name">Helpdesk Ticket: Manager Access</field>
            <field name="model_id" ref="model_helpdesk_ticket"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_helpdesk_manager'))]"/>
        </record>

        <!-- Portal Access Rules -->
        <record id="helpdesk_ticket_rule_portal" model="ir.rule">
            <field name="name">Helpdesk Ticket: Portal Access</field>
            <field name="model_id" ref="model_helpdesk_ticket"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

    </data>
</odoo>
